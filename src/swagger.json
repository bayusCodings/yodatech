          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "The movieID",
            "required": true,
            "schema": {
              "type": "string",
              "minimum": 1
            }
          },
          {
            "in": "query",
            "name": "sort",
            "description": "sort details eg sort=name asc or sort=gender desc",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "filter",
            "description": "sort details eg filter=male",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "status": "success"
          },
          "400": {
            "description": "Invalid input"
          }
